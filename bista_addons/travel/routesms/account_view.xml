<!-- TREE VIEw -->

        <record id="routesms_account_view_move_tree	" model="ir.ui.view">
            <field name="name">account.move.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='to_check']" position="after">
					<field name="credit_info" />      
					<field name="debit_info" string="Debit"/>              	
                </xpath>

                   
             </field>
        </record>  

<!-- ENDS -->

<!-- FORM VIEW -->



        <record id="routesms_account_view_move_form	" model="ir.ui.view">
            <field name="name">account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
            	
                <xpath expr="//field[@name='to_check']" position="after">
					<field name="credit_info" invisible="1"/>    
					<field name="debit_info" invisible="1" />            	
                </xpath>

                <xpath expr="//field[@name='line_id']/tree//field[@name='partner_id']" position="after">
					<field name="partner_type" attrs="{'readonly': [('partner_type_flag','=',False)]}" on_change="onchange_partner_type(partner_type,partner_id)" />                	

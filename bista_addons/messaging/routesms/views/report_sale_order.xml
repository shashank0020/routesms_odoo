<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	
	
<template id="report_sale_order_routesms" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='page']" position="replace">	

        <div class="page" style='font-size: medium'>
            <div class="oe_structure"/>
            <div class="row" >
                <div class="col-xs-6">
					<!-- <div style='color: #FFFFFF' t-if="o.company_id.partner_id.name"><span t-field="o.company_id.partner_id.name"/></div> -->										
                    <!-- <div t-field="o.company_id.partner_id" 
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/> -->
					<b><div t-if="o.company_id.name"><span t-field="o.company_id.name"/></div></b>
                    <div t-if="o.company_id.street"><span t-field="o.company_id.street"/></div>
                    <div t-if="o.company_id.street2"><span t-field="o.company_id.street2"/></div>
                    <div t-if="o.company_id.city"/><span t-field="o.company_id.city"/>,<span t-field="o.company_id.zip"/>
                    <div t-if="o.company_id.state_id"/><span t-field="o.company_id.state_id.name"/>,<span t-field="o.company_id.country_id.name"/>

                    
                    <div t-if="o.company_id.phone">Tel: <span t-field="o.company_id.phone"/></div>                    
                    <div t-if="o.company_id.cin">CIN:<span t-field="o.company_id.cin"/></div>
                    <div t-if="o.company_id.pan">PAN: <span t-field="o.company_id.pan"/></div>
                    <div t-if="o.company_id.company_registery">Service Tax Reg./VAT : <span t-field="o.company_id.company_registery"/></div>
                    <!-- <div class="mt8">
                        <strong>Shipping address:</strong>
                        <div t-field="o.partner_id" 
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                    </div> -->                        
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                	
                	<div t-if="o.use_contact_person_address">
	                    <b><div t-field="o.contact_id"
	                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' /></b>
	                        <div t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></div>
                	</div>

                	<div t-if="o.use_contact_person_address==False">
	                    <b><div t-field="o.partner_id"
	                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' /></b>
	                        <div t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></div>
                	</div>

                        
                </div>
                
                
            </div>

            <h2>
                <span t-if="o.state not in ['draft','sent']">Proforma Invoice° </span>
                <span t-if="o.state in ['draft','sent']">Proforma Invoice° </span>
                <span t-field="o.name"/>
            </h2>

            <div class="row mt32 mb32" id="informations">
                <div t-if="o.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="o.client_order_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                    <strong t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                    <p t-field="o.date_order"/>
                </div>
                <div t-if="o.user_id.name" class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-field="o.user_id.name"/>
                </div>
                <div t-if="o.payment_term" class="col-xs-3">
                    <strong>Payment Term:</strong>
                    <p t-field="o.payment_term"/>
                </div>
            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                    	<th>Product</th>
                        <th>Description</th>
                        <th>Taxes</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th groups="sale.group_discount_per_so_line">Disc.(%)</th>
                        <th class="text-right">Price</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                    <tr t-foreach="o.order_line" t-as="l">
                        <td>
                           <span t-field="l.product_id"/>
                        </td>                    	
                        <td>
                           <span t-field="l.name"/>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, l.tax_id))"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.product_uom_qty"/>
                            <span groups="product.group_uom" t-field="l.product_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td groups="sale.group_discount_per_so_line">
                            <span t-field="l.discount"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal"
                                t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total Without Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.total_with_bank_charges"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-if="o.bank_charges">
                <strong>Bank Charges Amount <span t-field="o.bank_charges"/>  included in Total</strong>
                
            </p>
            <p t-field="o.note" />
            <p t-if="o.payment_term.note">
                <strong>Payment Term:</strong>
                <span t-field="o.payment_term.note"/>
            </p>
  <table class="table table-bordered" t-if="o.partner_bank_id" >
	<thead>
	      <tr>
	        <th>Bank Transfer Detail</th>
	        
	      </tr>
	    </thead>
    <tbody>
      <tr>
        <td>


            <p t-if="o.partner_bank_id">
                
                
                <b>Bank Name : </b><span t-field="o.partner_bank_id.bank_name_invoice"/>
                <br></br>
                <b>Bank Address :</b><span t-if="o.partner_bank_id.bank.street" />
                	<span t-field="o.partner_bank_id.bank.street"/>

                	
                	<span t-if="o.partner_bank_id.bank.street2"/>
                	<span t-field="o.partner_bank_id.bank.street2"/>
                	
                	<span t-if="o.partner_bank_id.bank.zip"/>
                	<span t-field="o.partner_bank_id.bank.zip"/>
                	
                	<span t-if="o.partner_bank_id.bank.city"/>
                	<span t-field="o.partner_bank_id.bank.city"/>

                	<span t-if="o.partner_bank_id.bank.state"/>
                	<span t-field="o.partner_bank_id.bank.state.name"/>
                	
                	<span t-if="o.partner_bank_id.bank.country"/>
                	<span t-field="o.partner_bank_id.bank.country.name"/>
                	
                
                <br></br>
                <b>Owner : </b><span t-field="o.company_id.name"/>
                <br></br>
                <b>Account Number : </b><span t-field="o.partner_bank_id.acc_number"/>
                <br></br>
                <b>Swift Code : </b><span t-field="o.partner_bank_id.bank_bic"/>
                <br></br>
                <b>IBAN : </b><span t-field="o.partner_bank_id.iban"/>
                <br></br>
                <b>Sort Code : </b><span t-field="o.partner_bank_id.bank_sort_code"/>
                
                
            </p>  


        </td>
        
      </tr>

    </tbody>
  </table>
            <div class="oe_structure"/>
        </div>
    
    </xpath>
</template>



</data>
</openerp>

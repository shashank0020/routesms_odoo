<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>	
	<template id="routesms_icic_bank_layout">
	    <!-- Multicompany -->
	    <t t-if="o and 'company_id' in o">
	        <t t-set="company" t-value="o.company_id"></t>
	    </t>
	    <t t-if="not o or not 'company_id' in o">
	        <t t-set="company" t-value="res_company"></t>
	    </t>
	
	    <t t-call="routesms.external_layout_supplier_bank_header" />
	    <t t-raw="0" />
	
	</template>
	

	
	<template id="external_layout_supplier_bank_header">
	    <div class="header">
	        <div class="row">
	            <div class="col-xs-3">
	                <img t-if="company.icici_bank_baner" t-att-src="'data:image/png;base64,%s' % company.icici_bank_baner" style="max-height: 45px;"/>
	            </div>
	            <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
	        </div>
	        <b><u>Application for National Electronic Fund Transfer (NEFT)</u></b>

	    </div>
	</template>

	<template id="routesms_hdfc_bank_layout">
	    <!-- Multicompany -->
	    <t t-if="o and 'company_id' in o">
	        <t t-set="company" t-value="o.company_id"></t>
	    </t>
	    <t t-if="not o or not 'company_id' in o">
	        <t t-set="company" t-value="res_company"></t>
	    </t>
	
	    <t t-call="routesms.external_hdfc_layout_supplier_bank_header" />
	    <t t-raw="0" />
	
	</template>
	

	
	<template id="external_hdfc_layout_supplier_bank_header">
	    <div class="header">
	        <div class="row">
	            <div class="col-xs-3">
	                <img t-if="company.hdfc_bank_baner" t-att-src="'data:image/png;base64,%s' % company.baner" width="900" height="100" />
	            </div>
	            <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
	        </div>
	        

	    </div>
	</template>















<template id="external_layout_hdfc">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>

    <t t-call="routesms.external_layout_hdfc_header" />
    <t t-raw="0" />
    <!-- <t t-call="routesms.external_layout_hdfc_footer" /> -->
</template>

<template id="external_layout_hdfc_header">
		    <div class="header">
		        <div class="row">
		            <div class="">
		                	<img groups="routesms.group_routesms_active_report_banner" t-if="company.hdfc_bank_baner" t-att-src="'data:image/png;base64,%s' % company.hdfc_bank_baner" width="900" height="100" />
		                	
		            </div>
		            
		        </div>
	    
		        
		   </div>
</template>

<template id="external_layout_hdfc_footer">
    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <ul t-if="not company.custom_footer" class="list-inline">
                <li t-if="company.phone">Phone: <span t-field="company.phone"/></li>

                <li t-if="company.fax and company.phone">&amp;bull;</li>
                <li t-if="company.fax">Fax: <span t-field="company.fax"/></li>

                <li t-if="company.email">&amp;bull;</li>
                <li t-if="company.email">Email: <span t-field="company.email"/></li>

                <li t-if="company.website">&amp;bull;</li>
                <li t-if="company.website">Website: <span t-field="company.website"/></li>
            </ul>

            <t t-if="company.custom_footer">
                <span t-raw="company.rml_footer"/>
            </t>

            <ul class="list-inline">
                <li>Page:</li>
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
    </div>      
</template>


	

</data>
</openerp>
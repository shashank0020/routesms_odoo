        <record id="routesms_account_view_move_form	" model="ir.ui.view">
            <field name="name">account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='date']" position="attributes">
					<attribute name="on_change">onchange_jv_date(date)</attribute>   
                </xpath>           	

                <xpath expr="//field[@name='period_id']" position="attributes">
					<attribute name="readonly">0</attribute>   
					<attribute name="on_change">onchange_jv_period(period_id)</attribute>  
					<attribute name="domain">[('company_id', '=',company_id)]</attribute>
                </xpath> 
                
                <xpath expr="//field[@name='journal_id']" position="attributes">
					<attribute name="domain">[('company_id', '=',company_id)]</attribute>  
					<attribute name="options">{'no_create': True}</attribute> 
                </xpath> 
            	
                <xpath expr="//field[@name='to_check']" position="after">
					<field name="credit_info" invisible="1"/>    
					<field name="debit_info" invisible="1" />            	
                </xpath>

                <xpath expr="//field[@name='line_id']/tree//field[@name='partner_id']" position="after">
					<field name="partner_type" attrs="{'readonly': [('partner_type_flag','=',False)]}" on_change="onchange_partner_type(partner_type,partner_id)" />                	
                	<field name="partner_type_flag" invisible="1" />   
              	
                </xpath>

                <xpath expr="//field[@name='line_id']/tree//field[@name='partner_id']" position="attributes">
					<attribute name="options">{'no_create': True}</attribute>  
                </xpath>  

                <xpath expr="//form[@string='Account Entry']/notebook" position="after">
			        <div class="oe_chatter">
			            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
			            <field name="message_ids" widget="mail_thread"/>
			        </div>       
                </xpath>

                                                
             </field>
        </record>  


                	<field name="reconcile_uncheck"/>
                	<field name="cheque_number"/>
                	<field name="credit_type"/>
                	<field name="remark"/>
                	<field name="voucher_seq_number" readonly="1"/>
                	<field name="payment_method" on_change="payment_option_onchange(payment_method)" />

<!-- CANCEL INVOIE WIZARD  -->

        <record id="routesms_account_invoice_cancel_view" model="ir.ui.view">
            <field name="name">account.invoice.cancel.form</field>
            <field name="model">account.invoice.cancel</field>
            <field name="inherit_id" ref="account.account_invoice_cancel_view"/>
            <field name="arch" type="xml">
            	
                <xpath expr="//footer" position="before">
		        	<p class="oe_grey">
		        		Cancel selected invoices
		            </p>

                </xpath>
            </field>
        </record>


            
            
        <act_window id="action_account_invoice_cancel"
            multi="True"
            key2="client_action_multi" name="Cancel Draft and Unpaid Invoices"
            res_model="account.invoice.cancel" src_model="account.invoice"
            view_mode="form" target="new" view_type="form" />   

        <record id="account_invoice_holiday_wizard_view" model="ir.ui.view">
             <field name="name">Account Holiday wizard</field>
             <field name="model">account.invoice.holiday.wizard</field>
             <field name="arch" type="xml">
                <form string="Holiday Business Verticals">
                    <separator string="Holiday Business Verticals"/>
                    <label string="Select Vertical for your business"/>
                    <field name="holiday_vertical_list" class="oe_inline"/>
                    <footer>
                        <button name="submit" string="Submit" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
             </field>
         </record>


<!--  ENDS -->


        <record id="action_account_invoice_holiday_wizard_view" model="ir.actions.act_window">

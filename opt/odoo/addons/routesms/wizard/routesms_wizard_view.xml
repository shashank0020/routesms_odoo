<!-- Wizard for partner account type  data sync -->    	
        <record id="wizard_sync_partner_account_data_view_" model="ir.ui.view">
            <field name="name">Sync Partner Account Type Data To BMXPIN</field>
            <field name="model">sync.partner.account.type</field>
            <field name="arch" type="xml">
                <form string="Sync Partner Account Type Data To BMXPIN">
					<p style="color:#AF1173">Synchronize Partner Account Type Prepaid /Postpaid Data To BMXPIN</p>
					<group>
					</group>
                    <footer>
                        <button string="Synchronize" name="synchronise_partner_account_type" type="object" class="oe_highlight" context="{'active_id': active_id}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />    
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="sync_partner_account_data_wizard"
            name="Sync Partner Account Type Data To BMXPIN"
            src_model="res.partner"
            res_model="sync.partner.account.type"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            groups="base.group_partner_manager"/>

<!-- ENDS -->    	
    	
    	

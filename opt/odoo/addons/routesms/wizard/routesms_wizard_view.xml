            groups="routesms.group_routesms_293holiday_users_custom"/>


<!-- Wizard for customer filter -->
        <record id="routesms_partner_filter_wizard_view" model="ir.ui.view">
             <field name="name">Search Partner</field>
             <field name="model">partner.custom.filter</field>
             <field name="arch" type="xml">
                <form string="Customer Search">
                    
                    <!-- <label string="Customer Search"/> -->
                    <p style="color:#AF1173">Odoo Login User Type is either INDIA or INTERNATIONAL. Kindly contact HR Department to check your partner type</p>         
                    <field name="partner_name" placeholder="Enter Partner Name" class="oe_inline" invisible="0"/>
                    <field name="radio_partner" class="oe_inline" on_change="onchange_radio_partner(radio_partner)" />
                    <field name="domain" placeholder="Enter Domain" class="oe_inline"/>
                    <field name="radio_domain" class="oe_inline" on_change="onchange_radio_domain(radio_domain)"/>
                    <field name="email" placeholder="Enter Email" class="oe_inline"/>
                    <field name="radio_email" class="oe_inline" on_change="onchange_radio_email(radio_email)" />
                    <field name="odoo_id" placeholder="Enter Odoo Id" class="oe_inline"/>
                    <field name="radio_odoo_id" class="oe_inline" on_change="onchange_radio_odoo_id(radio_odoo_id)" />                    
                    <footer>
                        <button name="submit" default_focus="1" string="Submit" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
             </field>
         </record>



        <record id="action_routesms_partner_filter_wizard_view" model="ir.actions.act_window">
            <field name="name">Search Partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.custom.filter</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="routesms_partner_filter_wizard_view"/>
            <field name="target">new</field>
            
        </record>

        <menuitem
            icon="STOCK_EXECUTE"
            name="Customer Search"
            action="action_routesms_partner_filter_wizard_view"
            id="menu_routesms_partner_filter_wizard_view"
            parent="base.menu_sales"/>


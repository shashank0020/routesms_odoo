<!-- Wizard for Reset User Password -->

        <record id="routesms_reset_user_password_wizard_view" model="ir.ui.view">
             <field name="name">Reset Odoo Account Password</field>
             <field name="model">reset.user.password</field>
             <field name="arch" type="xml">
                <form string="Reset Odoo Account Password">
                    
                    
                    <p style="color:#AF1173">Your Old Password Will Expire On 16th February 2016 at 7pm.<br/>
                    Kindly Set New Password Before Deadline Else Your Account Will Be Deactivated. <br/>
                    Password Reset Allowed Only Once So This Window Will Be Disabled After Password Reset.<br/>
                    Username And New Password Will Be Sent To Your Mailbox.<br/>
                    For Quick Assistance Contact Odoo Team(shashank.verma@bistacloud.com)</p>         
                    <field name="name" password="True" placeholder="Enter New Password" class="oe_inline"  attrs="{'readonly': [('reset_completed','=',True)]}"/>
                    <field name="reset_completed"  invisible="1" />
                    <footer>
                        <button name="reset_user_password" default_focus="1" string="Reset Password" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
             </field>
         </record>

        <record id="action_routesms_reset_user_password_view" model="ir.actions.act_window">
            <field name="name">Reset Password</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reset.user.password</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="routesms_reset_user_password_wizard_view"/>
            <field name="target">new</field>
            
        </record>

	

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- wizard action on res.partner -->
        <act_window id="partner_send_mail_wizard_action"
            name="Send Email To Accounts Team"
            src_model="res.partner"
            res_model="partner.mail.wizard"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            groups="base.group_partner_manager"/>

        <!-- wizard view -->
        <record id="wizard_view" model="ir.ui.view">
            <field name="name">Send Email to Validate Partner</field>
            <field name="model">partner.mail.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Email To Validate Partner">
				<!--<marquee width="100%" bgcolor="#FFFFFF"><font size="5" color="#1B198C">Send Notification Email To Generate Odoo ID</font></marquee>-->

                                <p style="color: #AF1173">Send Notification Email To Generate Odoo ID</p>
                    <footer>
                        <button string="Send Mail" name="send_mail" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />    
                    </footer>
                </form>
            </field>
        </record>



        <!-- wizard action on res.partner swap  -->


        <!-- wizard view -->

        <record id="wizard_swap_view_" model="ir.ui.view">
            <field name="name">Send Email to Swap Partner</field>
            <field name="model">partner.swap.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Email To Swap Partner">
					<p style="color:#AF1173">Send Notification Email To Swap Partner</p>
					<group>
						<group>

							<field name="old_int_user_id"  on_change="onchange_bulk_request_int(old_int_user_id)" attrs="{'invisible': ['|',('old_is_int_user','=',False),('send_bulk_request','=',False)]}"
								options="{'no_create': True}" placeholder="Select User To Swap" class="oe_inline" />
							<field name="old_ind_user_id" on_change="onchange_bulk_request_ind(old_ind_user_id)" attrs="{'invisible': ['|',('old_is_ind_user','=',False),('send_bulk_request','=',False)]}" 
								options="{'no_create': True}" placeholder="Select User To Swap" class="oe_inline" />
							<field name="old_is_int_user" invisible="1"/>
							<field name="old_is_ind_user" invisible="1"/>
							
							<field name="int_user_id" attrs="{'invisible': [('is_int_user','=',False)]}"
								options="{'no_create': True}" placeholder="Select User To Swap" class="oe_inline" />
							<field name="ind_user_id" attrs="{'invisible': [('is_ind_user','=',False)]}" 
								options="{'no_create': True}" placeholder="Select User To Swap" class="oe_inline" />
							<field name="is_int_user" invisible="1"/>
							<field name="is_ind_user" invisible="1"/>


														
							<field name="odoo_id" placeholder="Enter Odoo Id" class="oe_inline" attrs="{'invisible': [('send_bulk_request','=',True)]}"/>
							<field name="send_bulk_request" on_change="onchange_remove_partner_ids(send_bulk_request)" />
							<!-- <field name="disable_single_request" invisible="0"/> -->
							<field name="partner_id"  attrs="{'invisible': [('send_bulk_request','=',False)]}" />
							
							
						</group>
					
					</group>
                    <footer>
                        <button string="Send Mail" name="send_swap_mail" type="object" class="oe_highlight" context="{'active_id': active_id}"/>
                        or
                        <button string="View Partner Detail" name="view_partner_detail" attrs="{'invisible': [('send_bulk_request','=',True)]}" type="object" class="oe_highlight" context="{'active_id': active_id}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />    
                    </footer>
                </form>
            </field>
        </record>


       <!-- wizard action on res.partner swap  -->
        <!-- <act_window id="partner_swap_mail_wizard_action"
            name="Swap/Migrate Partner"
            src_model="res.partner"
            res_model="partner.swap.wizard"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            groups="group_routesms_partner_swap"/>     -->

        <record id="action_routesms_partner_swap_wizard_view" model="ir.actions.act_window">
            <field name="name">Search Partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.swap.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_swap_view_"/>
            <field name="target">new</field>
            
        </record>
            
        <menuitem
            icon="STOCK_EXECUTE"
            name="Swap Partner"
            action="action_routesms_partner_swap_wizard_view"
            id="menu_routesms_partner_swap_wizard_view"
            parent="base.menu_sales"
            groups="group_routesms_partner_swap"
            />



<!-- SEND SWAP PARTNER REQUEST TO SALE SUPERUSER -->

        <!-- wizard view -->
        <record id="wizard_swap_request_view_" model="ir.ui.view">
            <field name="name">Send Email to Swap Partner</field>
            <field name="model">partner.swap.request.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Email Sale SuperUser To Swap Partner">
					<p style="color:#AF1173">Send Notification Email To Sale SuperUser To Swap Partner</p>
					<group>
						<group>
							
							<field name="int_user_id" attrs="{'invisible': [('is_int_user','=',False)]}"
								options="{'no_create': True}" placeholder="Select User To Swap" class="oe_inline" />
							<field name="ind_user_id" attrs="{'invisible': [('is_ind_user','=',False)]}" 
								options="{'no_create': True}" placeholder="Select User To Swap" class="oe_inline" />
							<field name="is_int_user" invisible="1"/>
							<field name="is_ind_user" invisible="1"/>

							<field name="int_superuser_id" attrs="{'invisible': [('is_int_superuser','=',False)]}"
								options="{'no_create': True}" placeholder="Send Request To" class="oe_inline" />
							<field name="ind_superuser_id" attrs="{'invisible': [('is_ind_superuser','=',False)]}" 
								options="{'no_create': True}" placeholder="Select User To Swap" class="oe_inline" />
							<field name="is_int_superuser" invisible="1"/>
							<field name="is_ind_superuser" invisible="1"/>							

							
						</group>


						
					
					</group>
                    <footer>
                        <button string="Send Mail To SuperUser" name="send_swap_request_mail" type="object" class="oe_highlight" context="{'active_id': active_id}"/>
                        or

                        <button string="Cancel" class="oe_link" special="cancel" />    
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_routesms_partner_swap_request_wizard_view"
            name="Send Swap Partner Request"
            src_model="res.partner"
            res_model="partner.swap.request.wizard"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            groups="base.group_partner_manager"/>


<!-- swap partner bulk request -->            

		<!-- Tree view starts -->
		<record id="view_swap_bulk_partner_tree" model="ir.ui.view">
			<field name="name">swap.bulk.partner.tree</field>
			<field name="model">swap.bulk.partner</field>
			<field name="arch" type="xml">
				<tree string="Partners">
					<field name="name"/>
					<field name="odoo_id"/>
					<field name="partner_id" invisible="1"/>
				</tree>
			</field>
		</record>

		<!-- Tree view end -->

		<!-- Action view starts -->
		<record id="action_swap_bulk_partner" model="ir.actions.act_window">
			<field name="name">Partners</field>
			<field name="res_model">swap.bulk.partner</field>
			<field name='view_type'>tree</field>
			<field name='view_mode'>tree</field>

			<!-- <field name="search_view_id" ref="view_vertical_business_filter"/> -->
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">No Record Found .</p>
			</field>
		</record>



	</data>
</openerp>
    
